<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="shop.tronlucky.trondapp.secret">
    <resultMap id="secret" type="shop.tronlucky.trondapp.model.Secret">
        <id column="id" property="id"/>
        <result property="roundNumber" column="round_number"/>
        <result property="secret" column="secret"/>
    </resultMap>
    <select id="findByRound" resultMap="secret">
        select id,
            round_number,
            secret
        from secret
        <choose>
            <when test='_parameter != null'>
                where round_number = #{roundNumber}
            </when>
            <otherwise>
                order by round_number desc limit 1
            </otherwise>
        </choose>
    </select>

    <select id="findBySecret" resultMap="secret">
        select id,
        round_number,
        secret
        from secret
        <choose>
            <when test='secret != null'>
                where secret = #{secret}
            </when>
            <otherwise>
                order by round_number desc limit 1
            </otherwise>
        </choose>
    </select>

    <insert id="addSecret">
        insert into secret(
        <trim suffixOverrides=",">
            <if test="roundNumber != null and roundNumber != ''">
                round_number,
            </if>
            <if test="secret != null and secret != ''">
                secret,
            </if>
        </trim>
        )
        values
        (
        <trim suffixOverrides=",">
            <if test="roundNumber != null and roundNumber != ''">
                #{roundNumber},
            </if>
            <if test="secret != null and secret != ''">
                #{secret}
            </if>
        </trim>
        )
        <selectKey keyProperty="id" resultType="java.lang.String">
            select LAST_INSERT_ID() as id
        </selectKey>
    </insert>

    <update id="updateRoundInfo">
        update secret
        <set>
            <if test="roundNumber != null and roundNumber != ''">
                round_number = #{roundNumber},
            </if>
            <if test="secret != null and secret != ''">
                secret = #{secret},
            </if>
        </set>
        where id = #{id}
    </update>
</mapper>